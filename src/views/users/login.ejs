<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/navbar') %>
    <section class="py-8">
      <div class="max-w-screen-xl mx-auto px-4">
        <form
          action="/users/login"
          method="POST"
          enctype="multipart/form-data"
          class="p-8 max-w-screen-sm mx-auto flex flex-col gap-4 shadow-md"
        >
          <div class="flex flex-col">
            <label for="email">Email</label>
            <input class="p-2 border rounded-md" type="email" name="email" id="email" />
          </div>
          <div class="flex flex-col">
            <label for="password">Password</label>
            <input class="p-2 border rounded-md" type="password" name="password" id="password" />
          </div>
          <div class="">
            <input type="checkbox" id="remember" name="remember" value="remember" />
            <label for="remember"> Remember me</label>
          </div>
          <button
            class="mt-2 p-4 bg-gray-700 text-gray-100 rounded-md text-xs uppercase tracking-widest font-bold"
            type="submit"
          >
            Login
          </button>
        </form>
      </div>
    </section>
  </body>
</html>
